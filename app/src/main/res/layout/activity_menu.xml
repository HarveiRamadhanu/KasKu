<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    <ProgressBar
        android:layout_centerInParent="true"
            android:id="@+id/progress_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <ImageView
        android:visibility="visible"
        android:id="@+id/background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ImageView>
    <TextView
        android:visibility="gone"
        android:id="@+id/gagal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_kaspribadi"
                android:gravity="bottom"
                android:onClick="gotoKP"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="bottom"
                android:onClick="gotoKK"
                android:layout_margin="16dp"
                android:src="@mipmap/ic_kaskelompok"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/menu_kaspribadi"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/menu_kaskelompok"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="gotoBI"
                android:textColor="#000000"
                android:gravity="bottom"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:src="@mipmap/ic_barangimpian"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="16dp"
                android:src="@mipmap/ic_calculator"
                android:onClick="gotoCalculator"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/menu_barangimpian"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/menu_kalkulator"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
